<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When pressed, with rounded corners -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#0C614C" /> <!-- Color when pressed -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default state, with rounded corners -->
    <item>
        <shape>
            <solid android:color="#1ca380" /> <!-- Default color -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
