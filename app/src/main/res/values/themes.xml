<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.BudgetPiggy" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BudgetPiggy" parent="Base.Theme.BudgetPiggy" />

    <!-- âœ… Custom Style for Buttons Using rounded_button.xml -->
    <style name="NextButtonStyle" parent="Widget.AppCompat.Button">


        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:drawableEnd">@drawable/vec_icon_arrow_forward</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:text">Next</item>
    </style>

    <style name="PreviousButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/backward_button</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#006C52</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:drawableStart">@drawable/vec_icon_arrow_backwards</item>
        <item name="android:text">Previous</item>
    </style>
</resources>
