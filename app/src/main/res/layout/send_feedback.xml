<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sendFeedbackPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_background"
    android:focusableInTouchMode="true"
    android:clickable="true"
    tools:context=".ui.settings.SendFeedbackPage">

    <!-- Top Bar -->
    <include
        android:id="@+id/topBar"
        layout="@layout/layout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Star Rating -->
            <TextView
                android:id="@+id/Intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="start"
                android:text="@string/send_feedback_title"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Feedback Input -->
            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="70dp"
                android:layout_marginBottom="44dp"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="4"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:stepSize="1.0" />

            <EditText
                android:id="@+id/etFeedback"
                android:layout_width="399dp"
                android:layout_height="348dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_edit_text"
                android:gravity="top|start"
                android:hint="@string/send_feedback_description"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:lines="5"
                android:padding="12dp" />

            <!-- Publish Feedback Button -->
            <Button
                android:id="@+id/btnPublishFeedback"
                android:layout_width="396dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_rounded_button"
                android:text="@string/send_feedback_publish"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- Info text -->
            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_feedback_appreciation"
                android:textSize="12sp"
                android:textColor="#808080"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>
    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>