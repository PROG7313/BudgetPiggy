<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_add_expense"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_help_button"
    android:padding="12dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/sectionHeader"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/help_add_expense"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/expandIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/help_add_expense"
            android:src="@drawable/ic_arrow_drop_down" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sectionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_add_expense_info1" />

        <ImageView
            android:id="@+id/expenseHelpImage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help_expense1"
            android:contentDescription="@string/help_add_expense"
            android:layout_marginTop="8dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_add_expense_info2"
            android:layout_marginTop="16dp"/>

        <ImageView
            android:id="@+id/expenseHelpImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help_expense2"
            android:contentDescription="@string/help_add_expense"
            android:layout_marginTop="8dp"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>
